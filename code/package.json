{
  "name": "digicommerce",
  "version": "1.0.0",
  "description": "",
  "author": "Vinnicyus Carvalho <vcgoncalves@stefanini.com>",
  "private": true,
  "license": "DIGI-COMMERCE",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "install:frameworks": "yarn global add @nestjs/cli prisma && yarn cache clean --force",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate:dev": "yarn prisma migrate dev --name",
    "prebuild": "rimraf dist",
    "prestart:dev": "yarn install && prisma generate && prisma migrate deploy",
    "prestart:prod": "nest build && prisma migrate deploy",
    "prisma:migrate": "./node_modules/prisma/build/index.js migrate deploy",
    "prisma": "./node_modules/prisma/build/index.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start": "nest start",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.1.0",
    "@nestjs/axios": "^1.0.0",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/graphql": "^10.1.2",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-ws": "^9.2.1",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.1.4",
    "@prisma/client": "4.8.0",
    "apollo-server-express": "^3.10.4",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "figlet": "^1.5.2",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-request": "^5.0.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.11.2",
    "json-to-graphql-query": "^2.2.4",
    "jwt-decode": "^3.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/figlet": "^1.5.5",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.11",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.8.0",
    "prisma": "^4.8.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.2",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "npx node dist/prisma/seed.js || ts-node src/prisma/seed.ts"
  }
}
